# EditorConfig for pi-gcode-server
# https://editorconfig.org

root = true

# Global defaults
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
max_line_length = 120

# YAML files (for CI/CD)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Systemd service files
[*.service]
indent_style = space
indent_size = 4

# Config files
[*.{ini,conf,config}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2
